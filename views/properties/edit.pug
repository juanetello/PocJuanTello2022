extends ../layout/admin 

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center POC 
            span.font-normal Juan Tello 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST")
                input(type="hidden" name="_csrf" value= csrfToken)
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Info general
                    p.text-gray-600 Añade info sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Titulo del anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo propiedad, ej: Casa en la playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : '')

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="descripcion") Descripcion del anuncio
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion propiedad, ej: Años de la casa" name="descripcion")= datos.descripcion ? datos.descripcion : ''

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categories") Categoria
                            select#categories.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( name="categories")
                                option(value="") - Seleccione -
                                each category in categories
                                    option(value=category.id selected= datos.categoryId ? datos.categoryId == category.id ? true : false : null )= category.nombre

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="price") Precio
                            select#price.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( name="price")
                                option(value="") - Seleccione -
                                each price in prices
                                    option(value=price.id selected= datos.priceId ? datos.priceId === price.id ? true : false : null )= price.nombre

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")            

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="rooms") Habitaciones
                            select#rooms.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( name="rooms")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 8
                                        option(value=n selected= datos.rooms ? datos.rooms === n ? true : false : null ) #{n++}

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="parking") Estacionamiento
                            select#parking.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( name="parking")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 4
                                        option(value=n selected= datos.parking ? datos.parking === n ? true : false : null) #{n++}

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="bathroom") Baños
                            select#bathroom.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( name="bathroom")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 5
                                        option(value=n selected= datos.bathroom ? datos.bathroom === n ? true : false : null) #{n++}

                    .border-gray-300.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicacion
                        p.text-gray-600 Ubica la propiedad en el mapa

                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''

                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')    
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '' )    
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '' )

                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar cambios")    

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")