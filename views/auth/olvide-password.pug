extends ../layout/index 

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.texte-center POC 
            span.font-normal Juan Tello 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de registro 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email de registro" type="email" name="email")

                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tenes cuenta? Inicia sesión     
                        a.text-gray-500.text-xs(href="/auth/register") ¿No tienes cuenta? Crea una

                    input(class="w-full bg-green-300 hover:bg-green-800 text-red-700 font-bold py-3 cursor-pointer"
                    type="submit" value="Recuperar password")