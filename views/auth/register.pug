extends ../layout/index 

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.texte-center POC
            span.font-normal Juan Tello 
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombre 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value= user ? user.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="apellido") Apellido 
                        input#apellido.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Apellido" type="text" name="apellido" value= user ? user.apellido : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de registro 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email de registro" type="email" name="email" value= user ? user.email : '' )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repite_password") Repetir password 
                        input#repite_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir password" type="password" name="repite_password")

                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tenes cuenta? Inicia sesión
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi contraseña

                    input(class="w-full bg-green-300 hover:bg-green-800 text-red-700 font-bold py-3 cursor-pointer"
                    type="submit" value="Crear cuenta")